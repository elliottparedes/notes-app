{
  "name": "markdown-notes-app",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "NODE_ENV=development nuxt dev",
    "dev:quiet": "VITE_PLUGIN_PWA_LOG_LEVEL=silent nuxt dev",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:watch": "vue-tsc --noEmit --watch",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test:pwa": "npm run build && npm run preview",
    "postinstall": "nuxt prepare",
    "clean": "rm -rf .nuxt node_modules/.vite node_modules/.cache",
    "fresh": "npm run clean && npm run dev",
    "migrate": "node migrations/run-migration.js"
  },
  "dependencies": {
    "@nuxt/ui": "^4.1.0",
    "@nuxtjs/mdc": "^0.18.0",
    "@pinia/nuxt": "^0.11.2",
    "@tiptap/extension-bubble-menu": "^3.8.0",
    "@tiptap/extension-image": "^3.8.0",
    "@tiptap/extension-link": "^3.8.0",
    "@tiptap/extension-placeholder": "^3.8.0",
    "@tiptap/extension-table": "^3.8.0",
    "@tiptap/extension-table-cell": "^3.8.0",
    "@tiptap/extension-table-header": "^3.8.0",
    "@tiptap/extension-table-row": "^3.8.0",
    "@tiptap/extension-task-item": "^3.8.0",
    "@tiptap/extension-task-list": "^3.8.0",
    "@tiptap/pm": "^3.8.0",
    "@tiptap/starter-kit": "^3.8.0",
    "@tiptap/vue-3": "^3.8.0",
    "@vueuse/nuxt": "^14.0.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.3",
    "notivue": "^2.4.5",
    "nuxt": "^4.2.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@tailwindcss/forms": "^0.5.10",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@vite-pwa/nuxt": "^1.0.7",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.2",
    "workbox-window": "^7.3.0"
  }
}
